datasource postgres {
  provider = "postgres"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Recipe {
  id           Int      @default(autoincrement()) @id
  description  String
  title        String
  ingredients  String
  instructions String
  yield        String
  source       String
  author       String
  notes        String
  image        String?
  isFavorite   Boolean  @default(false)
  createdAt    DateTime @default(now())
}
